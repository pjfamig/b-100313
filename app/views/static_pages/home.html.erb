<% provide(:title, 'Home') %>

<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
	  <section>
		<%= render 'shared/stats' %>
	  </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
	<div class="span8">
		<h3>Micropost Feed</h3>
		<%= render 'shared/feed' %>
	</div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the sample app</h1>

    <h2>
      This is the home page for the sample application. Please <%= link_to "login", signin_path %> or <%= link_to "sign up", signup_path %> to continue.
    </h2>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

<% end %>